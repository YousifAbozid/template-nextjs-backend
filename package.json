{
  "name": "template-nextjs-backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Next.js backend API service",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "node scripts/init-logs.js && next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx app",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx app --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "fix-all": "npm run lint:fix && npm run format",
    "upgrade": "npx npm-check-updates -u && npm install",
    "prepare": "husky"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "next": "15.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.24.2",
    "mongoose": "^8.13.2",
    "mongodb": "^6.15.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^3.0.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "eslint": "^9.24.0",
    "eslint-config-next": "15.3.0",
    "prettier": "^3.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^7.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "msw": "^2.7.3",
    "node-mocks-http": "^1.16.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
